---
const { title, date, image, variant = 'grid', width = '100%', height = 'auto' } = Astro.props;
---

<div class={`works-card-variant ${variant}`} style={`width: ${width}; height: ${height};`}>
  <img src={image} alt={title} class="card-image" />
  
  <div class="works-info">
    {variant !== 'small' && (
      <>
        <h3>{title}</h3>
        <p>{date}</p>
      </>
    )}
  </div>
</div>

<style>
.works-card-variant {
  border-radius: 12px;
  overflow: hidden; /* 固定外框 */
  cursor: pointer;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  display: block;
  border-radius: inherit;
}

.works-card-variant:hover .card-image {
  transform: scale(1.05); /* hover 只放大圖片 */
}

/* 文字區 */
.works-info {
  padding: 12px;
  text-align: center;
}
.works-info h3 {
  margin: 0;
  font-size: 1.1rem;
}
.works-info p {
  margin: 4px 0 0;
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.7);
}
</style>
